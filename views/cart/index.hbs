{{#extends "base"}}
  {{#block "title"}}Shopping Cart {{/block}}
  {{#block "body"}}
    <h2 class="ms-2 mt-1">{{user.username}}'s Shopping Cart</h2>
    <div>
        {{#if cart}}
          {{#each cart}}
            <div class="m-2">
              Item:
              {{this.product.name}} </br>
              Qty:
              {{this.quantity}} </br>
            </div>
          {{/each}}
        {{else}}
          <h2 class="ms-2 mt-1">
            Please buy something... Please?
          </h2>
        {{/if}}
      </ul>
    </div>
  {{/block}}
{{/extends}}