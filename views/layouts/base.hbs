<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
    <title>{{#block "title"}}{{/block}}</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand"></a>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            {{#if user}}
              <li class="nav-item">
                <a class="nav-link" href="/users/profile">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/products">Product List</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/products/create">Create Product</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/orders">Orders</a>
              </li>
            {{else}}
              <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
              </li>
            {{/if}}
          </ul>
        </div>
        <div style="color: white">
          {{#if user}}
            <span class="me-2">Hello,
              {{user.username}}
            </span>
            <a href="/users/logout" class="btn btn-primary btn-sm">Logout</a>
          {{else}}
            <a href="/users/login" class="ml-3 btn btn-primary btn-sm">Login</a>
          {{/if}}
        </div>
      </div>
    </nav>
    <section>
      {{#if success_msg}}
        <div class="alert alert-success">
          <ul>
            {{#each success_msg}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
      {{#if error_msg}}
        <div class="alert alert-danger">
          <ul>
            {{#each error_msg}}
              <li>{{this}}</li>
            {{/each}}
          </ul>
        </div>
      {{/if}}
    </section>
    <div>
      {{#block "body"}}{{/block}}
    </div>
    {{#block "js"}}{{/block}}
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
      integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
      crossorigin="anonymous"
    ></script>
  </body>
</html>